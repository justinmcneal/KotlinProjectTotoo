<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbg"
    android:orientation="vertical"
    tools:context=".ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montaguslabregular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restore your account"
            android:layout_marginStart="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/opensanslight" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="45dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="35dp"
            android:background="@drawable/custom_edittextbg">

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="15dp"
                android:padding="20dp"
                android:textColorHint="#808080"
                android:layout_marginTop="20dp"
                android:autofillHints="Email"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textSize="15sp"
                android:background="@drawable/custom_edittext"
                android:drawableEnd="@drawable/eyeiconhide"
                android:hint="New Password"
                android:drawablePadding="15dp"
                android:inputType="textPassword"
                android:textColorHint="#808080"
                android:maxLines="1"
                android:padding="20dp"
                android:autofillHints="New Password"/>


            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@drawable/custom_edittext"
                android:drawableEnd="@drawable/eyeiconhide"
                android:drawablePadding="15dp"
                android:textSize="15sp"
                android:hint="Confirm New Password"
                android:textColorHint="#808080"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="20dp"
                android:autofillHints="Confirm New Password"/>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/saffron"
                android:padding="13dp"
                android:text="Confirm"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/montaguslabregular"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>